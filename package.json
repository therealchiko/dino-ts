{
  "name": "dino-node",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start:dev": "pm2 start ecosystem.config.js --watch",
    "start:prod": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop all",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest --runInBand --forceExit ",
    "test:watch": "jest --watch",
    "test:setup": "createdb dinoz_test || true",
    "test:teardown": "dropdb dinoz_test || true",
    "pretest": "npm run test:setup",
    "seed": "ts-node src/database/seeds/run-seeders.ts",
    "migration:create": "typeorm migration:create",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/database.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/database.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/database.ts",
    "migration:refresh": "typeorm-ts-node-commonjs schema:drop -d src/config/database.ts && typeorm-ts-node-commonjs migration:run -d src/config/database.ts",
    "worker": "ts-node src/workers/index.ts"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "node-cron": "^3.0.3",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.8",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "pm2": "^5.3.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
